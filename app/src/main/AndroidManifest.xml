<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pl.umg.traincomplete">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrainComplete"
        tools:targetApi="31">
        <activity
            android:name=".LoseActivity"
            android:exported="false" />
        <activity
            android:name=".WinActivity"
            android:exported="false" />
        <activity
            android:name=".ViewPager"
            android:exported="false" />
        <activity
            android:name=".Files"
            android:exported="false" />
        <activity
            android:name=".gps"
            android:exported="false" />
        <activity
            android:name=".MainGameActivity"
            android:exported="false" />
        <activity
            android:name=".ChooseTrainActivity"
            android:exported="false" />
        <activity
            android:name=".MainStartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.media.action.IMAGE_CAPTURE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>